                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.dot()
                
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "="      
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.equals()

                
               
                
              
                
            
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                
                