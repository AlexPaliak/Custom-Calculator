<MyLayout>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        Label:
            id: prev_calc
            text: ""
            size_hint: None, None
            size: root.width-10, "130px"
            font_size: 30
            text_size: self.size
            halign: "right"
            valign: "middle"
            color: (100, 100, 100, 1)
        
        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: None, None
            size: root.width-5, "100px"
            background_color: (100, 100, 100, 1)
            
            
        GridLayout:
            cols: 4
            rows: 6
            
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "√"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press('√')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "^"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press('^')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "π"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press('π')
            
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "e"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press('e')
            
            Button:
                id: clear
                size_hint: (.2, .2)
                font_size: 32
                text: "C"
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.clear()
                
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: u"\u00AB"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.DeleteLast()
                
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "("    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press('(')
                
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: ")"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press(')')
                
            Button:
                size_hint: (.2, .2)
                font_size: 40
                text: "7"    
                background_color:(255, 255, 255, 0)
                color: (0, 0, 0, 1)
                on_press: root.button_press(7)
                
            Button:
                size_hint: (.2, .2)
                font_size: 40
                text: "8"
                background_color:(255, 255, 255, 0)
                color: (0, 0, 0, 1)
                on_press: root.button_press(8)
                
            Button:
                size_hint: (.2, .2)
                font_size: 40
                text: "9"    
                background_color:(255, 255, 255, 0)
                color: (0, 0, 0, 1)
                on_press: root.button_press(9)
                
            Button:
                size_hint: (.2, .2)
                font_size: 32
                text: "x"    
                background_color:(255, 255, 255, 0)
                color: (1, 0.5, 0, 1)
                on_press: root.button_press('x')
                   
            Button:
                size_hint: (.2, .2)
                font_size: 40
                text: "4"    
                background_color:(255, 255, 255, 0)
                color: (0, 0, 0, 1)
                on_press: root.button_press(4)
                
            Button:
                size_hint: (.2, .2)
                font_size: 40
